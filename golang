#/bin/bash
if [[ -n $GOPATH ]]; then
  add_to_path $GOPATH/bin

  if !which c; then
    alias c=cd
  fi
  # Edit a go package
  function gov {
    vim `golang-package $1`
  }

  # `cd` to a specific package
  function gocd {
    c `golang-package $1`
  }

  # find the directory of the first package name partially matching $1
  function golang-package {
    find $GOPATH/src/(square|*.(com|org|net))/* -type d -maxdepth 1 | grep $1 | head -n 1
  }
fi
# Test helpers moved to ./bin/
