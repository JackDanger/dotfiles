#!/bin/bash

# Go utilities - ASDF handles version management via .tool-versions
# No wrapper functions needed since ASDF shims handle everything

# `cd` to a specific package
function gocd {
  local gopath=$(command go env GOPATH 2>/dev/null)
  if [[ -z "$gopath" ]]; then
    echo "Error: GOPATH not set or Go not installed"
    return 1
  fi
  local selection=$(find "$gopath/src" -maxdepth 3 -type d 2>/dev/null | fzf)
  [[ -n "$selection" ]] && cd "$selection"
}
