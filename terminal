#!/bin/bash

export PAGER="less -FRSX"


if [[ -z `which seq` ]]; then
  seq() { for ((i=$1; i<= $2; i++)); do echo $i; done }
fi

function profile {
  $EDITOR ~/.profile.local && source ~/.profile.local
}

[ -f ~/.profile.local ] && . ~/.profile.local

builtinhelp() {
  man bash | less -p "^       $1 "
}

recent () {
  find * -type f -name '*[^.log]' -exec ls -1t "{}" + | head -n 10
}

# Split stdin into separate words
words () {
  while read line
  do
    for word in $=line
    do
      echo $word
    done
  done
}

# Parent pid
ppid () { ps -p ${1:-$$} -o ppid=; }

PATH=$PATH:~/bin
export PATH=/usr/local/sbin:$PATH
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/share/python:$PATH
