alias gs='git status'
alias gu='git pull --no-tags --recurse-submodules'
alias gfe='git fetch'
alias gl='git log'
alias gp='git push'
alias gf='git diff'
alias ga='git add'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias amend='git commit -v --amend'
alias gba='git branch -a'
alias gco='git checkout'
alias grm='git rm'
alias gmv='git mv'
alias stash='git stash'
alias unstash='git stash apply'
alias fetch='git fetch --no-tags'
alias last_commit="git log -n 1 --pretty=format:%H"
alias gsp="git commit -m 'updating subproject'"
alias git-unadd="git rm --cached"
alias gpick="git cherry-pick"
alias current_branch="__git_current_branch"
# do bash completion on popular commands
complete -o default -o nospace -F _git_checkout gco
complete -o default -o nospace -F _git_push gp
complete -o default -o nospace -F _git_pull gu
complete -o default -o nospace -F _git_log gl

# install hub with:
# curl -s http://defunkt.github.com/hub/standalone > ~/bin/hub && chmod 755 !#:4
if [ -f ~/bin/hub ]; then
  alias git=hub
fi
