alias gs='git status'
alias gfe='git fetch'
alias gu='git pull'
alias gl='git log'
alias gp='git push'
alias gf='git diff'
alias gfm='git diff | mate'
alias ga='git add'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias ammend='git commit -v --amend'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias gdc='git-svn dcommit'
alias gk='gitk -all &'
alias grm='git rm'
alias gmv='git mv'
alias stash='git stash'
alias unstash='git stash apply'

# swiped from http://www.simplisticcomplexity.com/2008/03/13/show-your-git-branch-name-in-your-prompt/

function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
