source `dirname $BASH_ARGV`/git_prompt

alias gs='git status'
alias gl='git pull'
alias gp='git push'
alias gf='git diff'
alias gfm='git diff | mate'
alias ga='git add'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias gdc='git-svn dcommit'
alias gk='gitk -all &'
alias gd='git rm' 


# swiped from http://www.simplisticcomplexity.com/2008/03/13/show-your-git-branch-name-in-your-prompt/

function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
