alias gs='git status'
alias gfe='git fetch'
alias gu='git pull'
alias gl='git log'
alias gp='git push'
alias gf='git diff'
alias gfm='git diff | mate'
alias ga='git add'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias ammend='git commit -v --amend'
alias gb='git branch'
alias gba='git branch -a'
alias gco='git checkout'
alias gdc='git-svn dcommit'
alias gk='gitk -all &'
alias grm='git rm'
alias gmv='git mv'
alias stash='git stash'
alias unstash='git stash apply'
alias last_commit="git log -n 1 --pretty=format:%H"

# do bash completion on popular commands
complete -o default -o nospace -F _git_checkout gco
complete -o default -o nospace -F _git_push gp
complete -o default -o nospace -F _git_log gl

