#/bin/bash
set -x
dotfiles=$(cd $(dirname $0) && pwd)

ln -s $dotfiles/bashrc                ~/.bashrc      || true
ln -s $dotfiles/gemrc                 ~/.gemrc       || true
ln -s $dotfiles/gitconfig             ~/.gitconfig   || true
ln -s $dotfiles/janus-extensions      ~/.janus       || true
ln -s $dotfiles/vim/janus/vim/vimrc   ~/.nvimrc      || true
ln -s $dotfiles/oh-my-zsh             ~/.oh-my-zsh   || true
ln -s $dotfiles/pystartup             ~/.pystartup   || true
ln -s $dotfiles/pryrc                 ~/.pryrc       || true
ln -s $dotfiles/sshrc                 ~/.sshrc       || true
ln -s $dotfiles/sshrc.d               ~/.sshrc.d     || true
ln -s $dotfiles/tmux.conf             ~/.tmux.conf   || true
ln -s $dotfiles/vim/janus/vim/vimrc   ~/.vimrc       || true
ln -s $dotfiles/vimrc                 ~/.vimrc.after || true
ln -s $dotfiles/zshrc                 ~/.zshrc       || true

# And install some just for Prezto
for rcfile in $dotfiles/prezto/runcoms/^README.md(.N); do
  ln -s "$rcfile" "${ZDOTDIR:-$HOME}/.${rcfile:t}"
done
